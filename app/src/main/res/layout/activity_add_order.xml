<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.customer.AddOrder">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/aoName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="Name"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/llQty"
                    android:layout_below="@id/aoName"
                    android:layout_marginBottom="10dp"
                    android:text="Quantity"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/llQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/aoName"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/aoQtyMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="quantityOp"
                        android:src="@drawable/ic_minus_32" />

                    <TextView
                        android:id="@+id/aoQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:text="1"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/aoQtyPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="quantityOp"
                        android:src="@drawable/ic_plus_32" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtSubTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtQuantity"
                    android:layout_marginBottom="10dp"
                    android:text="SubTotal"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/aoSubTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtQuantity"
                    android:layout_toStartOf="@+id/tk1"
                    android:text="0"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tk1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtQuantity"
                    android:layout_marginStart="5dp"
                    android:text="TK"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/aoExtraItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/llExtra"
                    android:layout_below="@id/txtSubTotal"
                    android:layout_marginBottom="10dp"
                    android:text="Extra "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/aoExtraPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtSubTotal"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_toStartOf="@+id/tk2"
                    android:text="0"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tk2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtSubTotal"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_toStartOf="@id/llExtra"
                    android:text="TK"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/llExtra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/txtSubTotal"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/aoExtraQtyMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="quantityOp"
                        android:src="@drawable/ic_minus_32" />

                    <TextView
                        android:id="@+id/aoExtraQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:text="0"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/aoExtraQtyPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="quantityOp"
                        android:src="@drawable/ic_plus_32" />
                </LinearLayout>


                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aoExtraItem"
                    android:layout_marginBottom="10dp"
                    android:text="Total"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/aoTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_toStartOf="@+id/tk3"
                    android:layout_below="@id/aoExtraItem"
                    android:text="0"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tk3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/aoExtraItem"
                    android:layout_marginStart="5dp"
                    android:text="TK"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtTotal"
                    android:text="Note"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/aoNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtNote"
                    android:layout_marginBottom="10dp"
                    android:focusable="false"
                    android:hint="Note" />

                <!--  <TextView
                      android:id="@+id/txtDate"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignBaseline="@id/btnDate"
                      android:text="Date"
                      android:layout_below="@id/note"
                      android:textSize="18sp" />

                 <Button
                      android:id="@+id/btnDate"
                      android:text="Select Date"
                      android:layout_below="@id/note"
                      android:layout_alignParentEnd="true"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />  -->

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/aoBtnTime"
                    android:layout_below="@id/aoNote"
                    android:layout_marginBottom="10dp"
                    android:text="Time"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/aoBtnTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/aoNote"
                    android:layout_marginBottom="10dp"
                    android:text="Select Time" />

                <TextView
                    android:id="@+id/txtPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aoBtnTime"
                    android:layout_marginBottom="10dp"
                    android:text="Payment"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/rg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/aoBtnTime">

                    <RadioButton
                        android:id="@+id/aoRdoCOD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Cash On delivery" />
                </RadioGroup>

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPayment"
                    android:text="Address"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/aoAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtAddress"
                    android:layout_marginBottom="10dp"
                    android:text="Full Address"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/aoAddress" />

            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <Button
                android:id="@+id/aoConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="confirm"
                android:text="Confirm Order" />
        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>