<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.customer.AddOrder">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/aoName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="Name"
                    android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/rlQty"
                android:layout_marginBottom="12dp"
                android:layout_below="@id/aoName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtQuantity"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/llQty"
                    android:layout_marginBottom="10dp"
                    android:text="Quantity"
                    android:textSize="16sp" />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_toStartOf="@id/aoPrice"
                    android:text="৳ "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/aoPrice"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_toStartOf="@id/llQty"
                    android:text="0"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/llQty"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:background="@drawable/corner_primary_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/aoQtyMinus"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:onClick="quantityOp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/minus_50" />

                    <TextView
                        android:id="@+id/aoQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:text="1"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/aoQtyPlus"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:onClick="quantityOp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/plus_50" />
                </LinearLayout>
            </RelativeLayout>

             <!--   <TextView
                    android:id="@+id/txtSubTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtQuantity"
                    android:layout_marginBottom="10dp"
                    android:text="SubTotal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/aoSubTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtQuantity"
                    android:layout_toStartOf="@+id/tk1"
                    android:text="0"
                    android:textSize="16sp" />
                    -->

            <RelativeLayout
                android:id="@+id/rlExtraQty"
                android:layout_marginBottom="16dp"
                android:layout_below="@id/rlQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/aoExtraItem"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/txtExtraPrice"
                    android:layout_alignBaseline="@id/llExtra"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="marquee"
                    android:text="Extra "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtExtraPrice"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_toStartOf="@id/aoExtraPrice"
                    android:text="৳ "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/aoExtraPrice"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:layout_toStartOf="@id/llExtra"
                    android:text="0"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/llExtra"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:padding="4dp"
                    android:background="@drawable/corner_primary_border"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/aoExtraQtyMinus"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:onClick="quantityOp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/minus_50" />

                    <TextView
                        android:id="@+id/aoExtraQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:text="0"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/aoExtraQtyPlus"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:onClick="quantityOp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:src="@drawable/plus_50" />
                </LinearLayout>

            </RelativeLayout>

                <TextView
                    android:id="@+id/txtSubTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rlExtraQty"
                    android:layout_marginBottom="16dp"
                    android:text="Sub Total"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_toStartOf="@id/aoSubTotalPrice"
                    android:text="৳ "
                    android:layout_below="@id/rlExtraQty"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/aoSubTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/rlExtraQty"
                    android:text="0"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtSubTotal"
                    android:layout_marginBottom="16dp"
                    android:text="Delivery Charge"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_toStartOf="@id/aoDeliveryFee"
                    android:text="৳ "
                    android:layout_below="@id/txtSubTotal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/aoDeliveryFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/txtSubTotal"
                    android:text="0"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtCoupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtDelivery"
                    android:layout_marginBottom="16dp"
                    android:text="Coupon"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/aoCoupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/txtDelivery"
                    android:layout_marginBottom="10dp"
                    android:text="Add Coupon Code"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtCoupon"
                    android:layout_marginBottom="16dp"
                    android:text="Total"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_toStartOf="@id/aoTotalPrice"
                    android:text="৳ "
                    android:layout_below="@id/txtCoupon"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/aoTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/txtCoupon"
                    android:text="0"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/aoNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtTotal"
                    android:layout_marginBottom="16dp"
                    android:padding="8dp"
                    android:background="@drawable/corner_primary_border"
                    android:focusable="true"
                    android:textSize="14sp"
                    android:hint="Note" />

                <!--  <TextView
                      android:id="@+id/txtDate"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignBaseline="@id/btnDate"
                      android:text="Date"
                      android:layout_below="@id/note"
                      android:textSize="18sp" />

                 <Button
                      android:id="@+id/btnDate"
                      android:text="Select Date"
                      android:layout_below="@id/note"
                      android:layout_alignParentEnd="true"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />  -->

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/aoBtnTime"
                    android:layout_below="@id/aoNote"
                    android:layout_marginBottom="16dp"
                    android:text="Expected Time"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/aoBtnTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/aoNote"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:text="Select Time" />

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@id/aoBtnTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txtPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Payment"
                    android:layout_centerVertical="true"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <RadioButton
                        android:id="@+id/aoRdoCOD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Cash On delivery" />
                </RadioGroup>
                </RelativeLayout>

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl1"
                    android:text="Address"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/aoAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_below="@id/rl1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="12dp"
                    android:text="Full Address"
                    android:textSize="16sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/aoAddress" />

            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <TextView
                android:id="@+id/aoConfirm"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="confirm"
                android:textSize="14sp"
                android:background="@drawable/green"
                android:textColor="@color/white"
                android:padding="12dp"
                android:text="Confirm Order" />
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>