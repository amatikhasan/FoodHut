<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rlQty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/oiItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/llQty"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@id/txtPrice"
            android:text="Name"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:layout_toStartOf="@id/oiPrice"
            android:text="৳ "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/oiPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="64dp"
            android:layout_toStartOf="@id/llQty"
            android:text="0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/X1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="32dp"
            android:layout_toStartOf="@id/llQty"
            android:text="X"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/llQty"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/corner_primary_bold"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/oiQtyMinus"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:onClick="quantityOp"
                android:src="@drawable/icon_minus" />

            <TextView
                android:id="@+id/oiQuantity"
                android:layout_width="16dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textStyle="bold"
                android:text="0"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/oiQtyPlus"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:onClick="quantityOp"
                android:src="@drawable/icon_plus" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlExtra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/oiExtraItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/llExtra"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@id/txtExtraPrice"
            android:ellipsize="marquee"
            android:text="Extra "
            android:fontFamily="sans-serif-light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtExtraPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:layout_toStartOf="@id/oiExtraPrice"
            android:text="৳ "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/oiExtraPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="64dp"
            android:layout_toStartOf="@id/llExtra"
            android:text="0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/X2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="32dp"
            android:layout_toStartOf="@id/llExtra"
            android:text="X"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/llExtra"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/corner_primary_bold"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/oiExtraQtyMinus"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:onClick="quantityOp"
                android:src="@drawable/icon_minus" />

            <TextView
                android:id="@+id/oiExtraQuantity"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textStyle="bold"
                android:text="0"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/oiExtraQtyPlus"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:onClick="quantityOp"
                android:src="@drawable/icon_plus" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="1dp"
        android:background="@color/overlay_dark_20" />

</LinearLayout>