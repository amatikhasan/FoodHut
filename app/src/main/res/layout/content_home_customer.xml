<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.customer.HomeCustomer"
    tools:showIn="@layout/app_bar_home_customer">

    <android.support.v7.widget.CardView
        android:id="@+id/cv1"
        app:cardElevation="2dp"
        android:layout_marginBottom="1dp"
        app:cardPreventCornerOverlap="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/home_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/locate_64" />

                <TextView
                    android:id="@+id/txtCLocation"
                    android:onClick="selectLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="5dp"
                    android:textSize="14sp"
                    android:text="All location" />
            </LinearLayout>

            <ImageView
                android:id="@+id/toggle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:onClick="openDrawer"
                android:src="@drawable/ham_64" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv2"
        android:layout_below="@id/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:onClick="setFilters"
                    android:background="@drawable/corner_primary_filled"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/filter_64_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Filter"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/hscv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llLunch"
                            android:onClick="getType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="8dp"
                            android:background="@drawable/corner_black_border"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/tvLunch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lunch"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llSnacks"
                            android:onClick="getType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="8dp"
                            android:background="@drawable/corner_black_border"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvSnacks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Snacks"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llDinner"
                            android:onClick="getType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="8dp"
                            android:background="@drawable/corner_black_border"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/tvDinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dinner"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llBF"
                            android:onClick="getType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="8dp"
                            android:background="@drawable/corner_black_border"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvBF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Breakfast"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="16sp" />
                        </LinearLayout>

                    <!--    <Spinner
                            android:id="@+id/spLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight=".33"
                            android:padding="8dp"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/spType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight=".33"
                            android:padding="8dp"
                            android:textSize="16sp" />
                            -->

                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clFooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/cv2">

        <android.support.v7.widget.CardView
            android:id="@+id/chCvSearch"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:descendantFocusability="beforeDescendants"
            android:visibility="gone">

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <EditText
                    android:id="@+id/chEtSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_toStartOf="@id/chIvSearch"
                    android:hint="Search"
                    android:background="@drawable/corner_black_border"
                    android:focusable="true"
                    android:clickable="true"
                    android:inputType="text"
                    android:padding="8dp" />

                <ImageView
                    android:id="@+id/chIvSearch"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"
                    android:src="@drawable/search_64" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/emptyOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.415">

            <!--  <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/bag_empty_50" />
            -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sorry, No Foods Found For You." />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvCustomerHome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/cvFooter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />



        <LinearLayout
            android:id="@+id/cvFooter"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/border_shadow"
            android:baselineAligned="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/chExplore"
                    android:onClick="footerAction"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/explore_64" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Explore"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/chSearch"
                    android:onClick="footerAction"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/search_64" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="Search"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".30"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/chNoti"
                    android:onClick="footerAction"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/noti_64" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Notification"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/chProfile"
                    android:onClick="footerAction"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/profile_64" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Profile"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_above="@id/cvFooter"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/round_logo"
            app:layout_constraintBottom_toTopOf="@+id/cvFooter"
            app:layout_constraintEnd_toEndOf="@+id/cvFooter"
            app:layout_constraintStart_toStartOf="@+id/cvFooter"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.701" />

    </android.support.constraint.ConstraintLayout>


</RelativeLayout>