<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingStart="4dp">

                <RelativeLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/line">

                    <TextView
                        android:id="@+id/mOrderNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="4dp"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="Order No"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/mFoodName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mOrderNo"
                        android:layout_marginEnd="4dp"
                        android:layout_toStartOf="@id/mQty"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="Food Name"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/mQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/mOrderNo"
                        android:layout_marginEnd="7dp"
                        android:text="0 pkt." />

                    <RelativeLayout
                        android:id="@+id/rlExtra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mFoodName">

                    <TextView
                        android:id="@+id/mExtraItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="4dp"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="Extra Item"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mExtraQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="4dp"
                        android:text="0 pcs." />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/mCAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rlExtra"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="4dp"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="Address"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mCAddress"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_toStartOf="@id/mAmount"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="Time:"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/mCAddress"
                        android:layout_marginEnd="8dp"
                        android:text="à§³ 0"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:id="@+id/line"
                    android:layout_width="1dp"
                    android:layout_height="120dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                    android:layout_toStartOf="@id/ll3"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:id="@+id/mIcon"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_accepted" />

                        <TextView
                            android:id="@+id/mStatus"
                            android:layout_width="match_parent"
                            android:layout_toEndOf="@id/mIcon"
                            android:layout_height="32dp"
                            android:layout_centerVertical="true"
                            android:gravity="start|center_vertical"
                            android:paddingStart="4dp"
                            android:text="Accepted"
                            android:textColor="@drawable/green"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/mAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Reject"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:visibility="invisible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/mNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/line"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="View Note"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>